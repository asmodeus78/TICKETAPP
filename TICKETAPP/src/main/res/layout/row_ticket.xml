<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >


    <ImageView
        android:layout_width="360dp"
        android:layout_height="217dp"
        android:id="@+id/TK_image"
        android:src="@drawable/loading2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
    />

    <ImageView
        android:layout_width="360dp"
        android:layout_height="217dp"
        android:id="@+id/imageView"
        android:src="@drawable/sfumatura_ticket"
    />


    <RatingBar
        android:id="@+id/TK_voto"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="25dp"
        android:rating="0"
        style="@style/RatingBarSmallAppTheme"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:numStars="5"
        android:layout_alignTop="@+id/TK_scaricati"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/TK_titoloSup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="McDonald's - Caserta - Napoli"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/TK_titolo"
        android:layout_alignLeft="@+id/TK_codice" />

    <TextView
        android:id="@+id/TK_titolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Big Mac REGALATO per 1 acquistato "
        android:textColor="#fff"
        android:textSize="14dp"
        android:textStyle="normal"
        android:autoText="false"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/TK_scaricati"
        android:layout_alignLeft="@+id/TK_titoloSup" />

    <TextView
        android:id="@+id/TK_scaricati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scaricati 800"
        android:textColor="#fff"
        android:textSize="14dp"
        android:textStyle="normal"
        android:autoText="false"
        android:enabled="false"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/TK_image"
        android:layout_alignLeft="@+id/TK_titolo" />

    <TextView
        android:id="@+id/TK_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Km 0"
        android:textColor="#fff"
        android:textSize="14dp"
        android:textStyle="normal"
        android:autoText="false"
        android:enabled="false"
        android:layout_alignTop="@+id/TK_voto"
        android:layout_centerHorizontal="true" />



    <TextView
        android:id="@+id/TK_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textColor="#ff0000"
        android:textSize="14dp"
        android:textStyle="normal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:autoText="false"
        android:enabled="false"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/TK_codice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODICE"
        android:textColor="#ff0000"
        android:textSize="14dp"
        android:textStyle="normal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:autoText="false"
        android:enabled="false"
        android:visibility="invisible" />





</RelativeLayout>

