<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp" >


    <ImageView
        android:layout_width="360dp"
        android:layout_height="217dp"
        android:id="@+id/TK_image"
        android:src="@drawable/loading2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
    />

    <ImageView
        android:layout_width="360dp"
        android:layout_height="217dp"
        android:id="@+id/imageView"
        android:src="@drawable/sfumatura_ticket"
    />


    <TextView
        android:id="@+id/TK_titoloSup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="McDonald's - Caserta - Napoli"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="150dp"
    />

    <TextView
        android:id="@+id/TK_titolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Big Mac REGALATO per 1 acquistato "
        android:textColor="#fff"
        android:textSize="14dp"
        android:textStyle="normal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="175dp"
        android:autoText="false"
    />









</RelativeLayout>

