<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.ticketclub.ticketapp" >

    <!-- Required for fetching feed data. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Required for use SD CARD. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/logo_top"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Apptheme" >
        <activity android:name="it.ticketclub.ticketapp.MainActivity" />
        <activity
            android:name="it.ticketclub.ticketapp.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.ticketclub.ticketapp.HomeActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow" />
        <activity
            android:name="it.ticketclub.ticketapp.FirstActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name="it.ticketclub.ticketapp.DemoActivity2"
            android:label="@string/title_activity_demo_activity2" >
        </activity>
        <activity
            android:name="it.ticketclub.ticketapp.LoadTicket"
            android:label="@string/title_activity_demo_activity2" >
        </activity>
        <activity
            android:name="it.ticketclub.ticketapp.DemoActivity3"
            android:label="@string/title_activity_demo_activity3" >
        </activity>
        <activity
            android:name="it.ticketclub.ticketapp.SecondActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow">
        </activity>
    </application>

</manifest>
