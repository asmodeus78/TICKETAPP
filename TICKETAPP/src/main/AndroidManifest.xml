<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.ticketclub.ticketapp" >

    <!-- Required for fetching feed data. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Required for use SD CARD. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/logo_top"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Apptheme" >
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait"
            android:label=""
        />
        <activity android:name=".FirstActivity" android:screenOrientation="portrait" android:label="" android:uiOptions="splitActionBarWhenNarrow">

            <meta-data android:name="android.support.UI_OPTIONS" android:value="splitActionBarWhenNarrow" />

        </activity>


    </application>

</manifest>
