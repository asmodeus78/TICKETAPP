<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.ticketclub.ticketapp" >

    <!-- Required for fetching feed data. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/logo_top"
        android:label="@string/app_name"
        android:theme="@style/Theme.Apptheme" >
        <activity android:name="it.ticketclub.ticketapp.MainActivity" />
        <activity
            android:name="it.ticketclub.ticketapp.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.ticketclub.ticketapp.HomeActivity"
            android:label=""
        />
        <activity
            android:name="it.ticketclub.ticketapp.FirstActivity"
            android:label=""
        />



    </application>

</manifest>
